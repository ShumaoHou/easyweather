<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <android.support.v7.widget.Toolbar
        android:id="@+id/weather_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="#00000000"
        app:theme="@style/ThemeOverlay.AppCompat.Light"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <Button
        android:id="@+id/weather_toolbar_city_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_location"/>

    <TextView
        android:id="@+id/weather_toolbar_city_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/weather_toolbar_city_btn"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/segment_title"/>

    <TextView
        android:id="@+id/weather_toolbar_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/weather_toolbar_more_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/ic_settings"/>

    </android.support.v7.widget.Toolbar>

</RelativeLayout>