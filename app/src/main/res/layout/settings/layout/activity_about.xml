<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <Button
            android:id="@+id/settings_about_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_settings_about"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/segment_title"
            android:layout_marginStart="48dp"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/settings_item_margin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_item_margin"
            android:textSize="@dimen/settings_about_title"
            android:textColor="@color/colorBlack"
            android:text="作者"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_item_margin"
            android:textSize="@dimen/settings_about_details"
            android:text="mndream"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_item_margin"
            android:textSize="@dimen/settings_about_title"
            android:textColor="@color/colorBlack"
            android:text="@string/settings_about_kuan_t"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_item_margin"
            android:textSize="@dimen/settings_about_details"
            android:text="@string/settings_about_kuan_a"
            android:autoLink="web"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_item_margin"
            android:textSize="@dimen/settings_about_title"
            android:textColor="@color/colorBlack"
            android:text="@string/settings_about_github_t"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_item_margin"
            android:textSize="@dimen/settings_about_details"
            android:text="@string/settings_about_github_a"
            android:autoLink="web"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_item_margin"
            android:textSize="@dimen/settings_about_title"
            android:textColor="@color/colorBlack"
            android:text="@string/settings_about_github_ref"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/settings_item_margin"
            android:textSize="@dimen/settings_about_details"
            android:text="@string/settings_about_github_ref_a"
            android:autoLink="all"/>
    </LinearLayout>

</LinearLayout>
